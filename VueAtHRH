<script setup>
import {ref,reactive, computed, watch} from 'vue'

const num = ref(6)
const word = ''

const tests = computed(() => {
  return num.value > 5 ? 'yes': 'no'
  })

watch(num, newNum) => {
  if(newNum > 7){
    word.value = 'seven'
  }
}
</script>

<template>
<h1>Hello Vue 3</h1>
<button @click="num++">click to num</button>
<h2> {{num}} </h2>
  
 
</template>

<style scoped>
button {
  font-weight: bold;
}
</style>
